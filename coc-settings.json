{
    "diagnostic.warningSign": "--",
    "coc.preferences.jumpCommand": "edit",
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "rust-analyzer.server.path": "~/.local/bin/rust-analyzer",
    "suggest.detailField": "preview",
    "python.formatting.provider": "black",
    "java.jdt.ls.vmargs":"-noverify -Xmx6G -XX:+UseG1GC -XX:+UseStringDeduplication",
    "java.signatureHelp.enabled": false,
    "java.implementationsCodeLens.enabled": true,
    "java.format.settings.url": "/Users/zhuanxin/.config/coc/extensions/node_modules/redhat.java/eclipse-formatter.xml",
    "java.format.comments.enabled": false,
    "java.completion.importOrder": ["com", "org", "javax", "java"],
    "java.completion.maxResults": 5,
    "java.progressReports.enabled": false,
    "clangd.semanticHighlighting": true,
    "clangd.arguments": ["-j=4", "-background-index", "-index"],
    "python.pythonPath": "~/miniconda3/bin/python",
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "golang": {
            "command": "gopls",
            "args": [],
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "go"
            ]
        },
        "cmake": {
            "command": "cmake-language-server",
            "filetypes": [
                "cmake"
            ],
            "rootPatterns": [
                "build/"
            ],
            "initializationOptions": {
                "buildDirectory": "build"
            }
        }
    },
    "git.enableGutters": true
}
